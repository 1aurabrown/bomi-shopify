{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{% liquid 
  assign parent_link = null
  for link in section.settings.menu.links
    for child_link in link.links
      if link.child_active
        assign parent_link = link
      endif
      for grandchild_link in child_link.links
      endfor
      if child_link.child_active
        assign parent_link = child_link
        break
      endif
      if link.child_active
        break
      endif
    endfor
  endfor 
%}
<div class="padding-x mb-2">
  {% if collection.description.size > 0 %}
    <h1 class="underline">{{ collection.title }}</h1>
    <div class="sm:grid sm:grid-cols-2 md:grid-cols-3 gap-gutter mt-text-line mb-9"><div class="md:col-span-2 lg:col-span-1 rte">{{ collection.description }}</div></div>
  {% else %}
  <div class="flex space-x-1">{% if parent_link %}<a href={{ parent_link.url }} class="uppercase hover:underline">{{ parent_link.title }}</a><span>â€¢</span>{% endif %}<h1>{{ collection.title }}</h1></div>
  {% endif %}
</div>
